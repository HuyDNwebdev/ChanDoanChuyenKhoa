<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      .btn-edit {
        background-color: orange;
        border-radius: 5px;
        height: 25px;
        width: 60px;
        margin: 5px;
        cursor: pointer;
        display: block;
      }

      .btn-delete {
        background-color: "#ff0023";
        border-radius: 5px;
        height: 25px;
        width: 60px;
        margin: 5px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h2>get CRUD from Views</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Action</th>
        <th>Gender</th>
      </tr>
      <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].phoneNumber %></td>
        <td><%= dataTable[i].address %></td>
        <td><%= dataTable[i].gender =='1' ? 'Nam' : 'Nu' %></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id%>"
            type="button"
            class="btn-edit"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%=dataTable[i].id%>"
            type="button"
            class="btn-delete"
            >Delete</a
          >
        </td>
        <td></td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
